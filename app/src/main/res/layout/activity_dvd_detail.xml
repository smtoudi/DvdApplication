<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dvd_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rent.dvdapplication.DvdDetailActivity">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/activity_detail_imageview" />

    <TextView
        android:text="Title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_detail_title" />

    <TextView
        android:text="Genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_detail_genre" />

    <TextView
        android:text="Year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_detail_year" />

    <TextView
        android:text="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_detail_description" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_dvd_detail_minus"
            android:layout_weight="1" />

        <TextView
            android:text="amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_dvd_detail_amount"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_dvd_detail_plus"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:text="Delete movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_dvd_detail_deleteButton"
         />


</LinearLayout>
